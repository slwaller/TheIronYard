= form_for [@location, @cohort, @student] do |f|
  - if @student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@student.errors.count, "error")} prohibited this student from being saved:"
      %ul
        - @student.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :first_name
    = f.text_field :first_name, class: "form-control", placeholder: "Fill out your first name"
  .form-group
    = f.label :last_name
    = f.text_field :last_name, class: "form-control", placeholder: "Fill out your last name"
    %br
    = f.submit 'Submit'

