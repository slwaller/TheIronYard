= form_for @location do |f|
  - if @location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :city
    = f.text_field :city, class: "form-control", placeholder: "Which city would you like to add?"
  .form-group
    = f.label :description
    = f.text_field :description, :cols => "30", :rows => "10", class: "form-control", placeholder: "Give a brief description of your location"
    %br

    = f.submit 'Submit'